{
    "name": "90zlaya/space-prospection",
    "description": "Space Prospection is my first website built completely in CodeIgniter framework.",
    "keywords": [
        "php",
        "codeigniter"
    ],
    "homepage": "https://github.com/90zlaya/space-prospection",
    "license": "MIT",
    "authors": [
      {
        "name": "Zlatan Stajic",
        "email": "contact@zlatanstajic.com",
        "homepage": "https://www.zlatanstajic.com",
        "role": "Author & Main Developer"
      }
    ],
    "scripts": {
      "setup": "composer install && php application/vendor/kenjis/ci-phpunit-test/install.php && rm application/tests/controllers/Welcome_test.php",
      "phpunit": "phpunit -c application/tests",
      "autotest": "bash shell/auto-test.sh"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "vendor-dir": "application/vendor"
    },
    "require": {
        "90zlaya/php-library": "1.5.*"
    },
    "require-dev": {
        "kenjis/ci-phpunit-test": "0.15.*",
        "squizlabs/php_codesniffer": "3.3.*"
    }
}
